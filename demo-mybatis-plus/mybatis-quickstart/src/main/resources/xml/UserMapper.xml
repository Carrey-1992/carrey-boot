<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.carrey.quickstart.dao.UserMapper">

    <select id="getInfo" parameterType="integer" resultType = "com.carrey.quickstart.po.User">
    SELECT
    id, name, age, email
    FROM user
      <where>
          <if test="id != null">
              AND id = #{id}
          </if>
          <if test="name != null and name != ''">
          <!-- bind 避免更换数据库而修改sql -->
          <bind name="userNameLike" value="'%'+ name +'%'"/>
              AND name Like #{userNameLike}
          </if>
          <if test="age != null">
              AND age = #{age}
          </if>
          <if test="email != null and email != ''">
          <bind name="userEmailLike" value="'%'+ email +'%'"/>
              AND email Like #{userEmailLike}
          </if>
      </where>
    </select>

    <insert id="createUser">
        INSERT INTO user(id, name, age, email) VALUES
        (#{id},#{name},#{age},#{email})
        <selectKey keyColumn="id" resultType="long" keyProperty="id" order="AFTER">
            SELECT LAST_INSERT_ID()
        </selectKey>
    </insert>

    <update id="updateById">
        UPDATE user
        <set>
            <if test="name !=null and name != ''">
                name = #{name},
            </if>
            <if test="email !=null and email != ''">
                email = #{email},
            </if>
            id = #{id}
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM user WHERE id = #{id}
    </delete>

    <select id="selectByIds" resultType="com.carrey.quickstart.po.User">
    SELECT
    id, name, age, email
    FROM user
    <where>
        <if test="ids neq null and ids.size() gt 0">
        and id in
            <foreach collection="ids" open="(" close=")" separator="," item="id" index="i">
                #{id}
            </foreach>
        </if>
    </where>
    </select>

    <insert id="insertList">
        INSERT INTO user (id, name, age, email) VALUES
        <foreach collection="list" index="i" separator="," item="user">
            (#{user.id},#{user.name},#{user.age},#{user.email})
        </foreach>
    </insert>
</mapper>